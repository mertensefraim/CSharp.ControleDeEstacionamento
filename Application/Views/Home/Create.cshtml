@model Service.Models.Bookings.BookingViewModelCreate;

<h2>Cadastro de Entradas</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]

    </div>
}

<form asp-action="Create" method="POST">

    <div class="row">

        <div class="form-group col-md-6">
            <label asp-for="LicensePlate" class="form-label"></label>
            <input asp-for="LicensePlate" class="form-control" />
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="StartDate" class="form-label"></label>
            <input readonly type="datetime-local" format asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>

    <br />

    <div>
        <a class="btn btn-outline-danger float-start" asp-action="Index">Cancelar <i class="fa-solid fa-x"></i></a>
        <button class="btn btn-primary float-end" type="submit">Salvar <i class="fas fa-arrow-right"></i></button>
    </div>
</form>