@using Repository.Entities
﻿
@model List<Parameter>;

<h2>Parâmetros</h2>

<div class="row mb-2">
    <div class="text-end">
        <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Valor inicial (R$)</th>
            <th>Valor incremental (R$)</th>
            <th>Data de início</th>
            <th>Data de fim</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parameter in Model)
        {
            <tr>
                <td>@parameter.Id</td>
                <td>@parameter.InitialValue</td>
                <td>@parameter.IncrementalValue</td>
                <td>@parameter.StartDate</td>
                <td>@parameter.EndDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@parameter.Id" class="btn btn-warning">
                        <i class="fa-solid fa-file-pen"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>